@model Contract.WebModel.PageData<Model.Models.Language>

@{
    ViewBag.Title = "Języki";
}

<h2>Języki</h2>

<p>
    @Html.ActionLink("Utwórz nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Data) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Create", new { IdParent = item.Id }, new { @class = "glyphicon glyphicon-plus" }) |
            @Html.ActionLink(" ", "Remove", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}
</table>
