@model IEnumerable<Model.Models.Actor>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nazwa")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", "Actor", new { idActor = item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ","Delete", "Actor", new { idActor=item.Id, idDialogue = item.DialogueId }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}
</table>
