@using Contract.WebModel
@using Model.EnumType
@using Model.Models
@model PageData<Dialogue>

<table class="table">
    <tr>
        <th>
            Nazwa Dialogu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && ViewBag.UserId == item.AutorId && item.Status == DialogueStatus.Edit)
                {
                    @Html.ActionLink(" ", "Edit", new { idDialogue = item.Id }, new { @class = "glyphicon glyphicon-edit" })
                    @Html.ActionLink(" ", "RemoveEdit", new { idDialogue = item.Id }, new { @class = "glyphicon glyphicon-trash" })
                }

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink(" ", "Remove", new { idDialogue = item.Id }, new { @class = "glyphicon glyphicon-trash" })
                }
                @if (item.Status == DialogueStatus.Pubish)
                {
                    @Html.ActionLink("Odegraj", "Play", "DialoguePlay", new { dialogueId = item.Id }, new { })
                }

            </td>
        </tr>
    }
</table>