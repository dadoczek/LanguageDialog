@model Contract.Dtos.DialogueViewDto

@{
    ViewBag.Title = "Stwórz nowy dialog";
}

<div id="dialog" title="Create Album">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>@ViewBag.Title</h2>
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.Languages)
            @Html.HiddenFor(model => model.Dialogue.AutorId)

            <div class="form-group">
                @Html.Label("Nazwa", htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dialogue.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Dialogue.Name, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Język", htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Dialogue.LanguageId, new SelectList(Model.Languages, "Id", "Name"), "Wybierz Język", new {@class = "btn btn-primary dropdown-toggle"})
                    @Html.ValidationMessageFor(model => model.Dialogue.LanguageId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Stwórz" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $('#dialog').dialog('open');
    });
</script>
