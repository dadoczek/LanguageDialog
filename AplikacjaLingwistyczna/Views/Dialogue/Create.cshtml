@model Contract.Dtos.CreateDialogueDto

<div id="dialog" title="Create Album">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Create Dialogue</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Languages)

            <div class="form-group">
                @Html.LabelFor(model => model.Dialogue.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dialogue.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dialogue.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Dialogue.Language, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Dialogue.LanguageId, new SelectList(Model.Languages, "LanguageId", "Name"), "Wybierz Język", new { @class = "btn btn-primary dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.Dialogue.LanguageId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $('#dialog').dialog('open');
    });
</script>
